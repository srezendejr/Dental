@model APCD.Modelos.Procedimentos
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>*@
<script language="javascript" type="text/javascript">
    function ExcluirRegistro() {
        var id = document.getElementById("hdId").value;
        if (confirm("Deseja excluir este registro ?") == true) {
            window.location = '@Url.Content("~/Procedimento/Excluir?Id=")' + id;
        }
    }
</script>

@using (Html.BeginForm("Salvar", "Procedimento"))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Procedimentos</legend>
        @Html.HiddenFor(model => model.ProcedimentoId, new { id="hdId"})
        <table id="TableForms">
            <tr>
                <td>
                    @Html.Partial("_FormProcedimento")
                </td>
            </tr>
            <tr>
                <th colspan="3" style="background-color: transparent !Important;">
                    <span style="padding-right: 1em">
                        <input type="button" value="Excluir" id="btnExcluir" onclick="javascript:ExcluirRegistro();" />
                    </span><span>
                        <input type="button" value="Voltar" id="btnVoltar" onclick="javascript:window.location='@Url.Content("~/Procedimento/Index")';" />
                    </span><span>
                        <input type="submit" value="Salvar" id="btnSalvar" />
                    </span>
                </th>
            </tr>
        </table>
    </fieldset>
}
