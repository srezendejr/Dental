@model APCD.Modelos.Procedimentos
<script type="text/javascript" language="javascript" src=@Url.Content("~/Scripts/jquery.maskMoney.js")></script>
<script type="text/javascript" language="javascript" src=@Url.Content("~/Scripts/jquery.maskedinput-1.3.js")></script>
<table id="TableForms">
    <tr>
        <td>
            @Html.LabelFor(model => model.ProcedimentoNome)
        </td>
    </tr>
    <tr>
        <td>
            @Html.TextBoxFor(model => model.ProcedimentoNome, new { id = "txtNome", style = "width:250px;" })
            @Html.ValidationMessageFor(model => model.ProcedimentoNome)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(model => model.ProcedimentoDescricao)
        </td>
    </tr>
    <tr>
        <td>
            @Html.TextAreaFor(model => model.ProcedimentoDescricao, new { id = "txtDescricao", style = "width:250px;" })
            @Html.ValidationMessageFor(model => model.ProcedimentoDescricao)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(model => model.ProcedimentoTipo)
        </td>
    </tr>
    <tr>
        <td>
            @Html.DropDownListFor(model => model.ProcedimentoTipo, ViewData["TipoProc"] as MultiSelectList, new { id = "cboTipo" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(model => model.ProcedimentoValor)
        </td>
    </tr>
    <tr>
        <td>
            @Html.TextBoxFor(model => model.ProcedimentoValor, new { id = "txtValor", style = "width:100px;" })
            @Html.ValidationMessageFor(model => model.ProcedimentoValor)
        </td>
    </tr>
</table>
<script language="javascript" type="text/javascript">
    $(function () {
        $("#txtValor").maskMoney({ thousands: '.', decimal: ',', precision: 2 });
        //$("#txtValor").mask("999,99",{placeholder:" "});
    });
</script>
