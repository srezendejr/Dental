@model APCD.Modelos.Midias
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Atualizar", "Midia"))
{
    <fieldset>
        <legend>Midias</legend>
        @*@Html.ValidationSummary(true)*@
        @Html.HiddenFor(model => model.MidiaId, new { id = "hdId" })
        <div class="editor-label">
            @Html.LabelFor(model => model.MidiaNome)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.MidiaNome)
            @Html.ValidationMessageFor(model => model.MidiaNome)
        </div>
        <br />
        <div>
            <span style="padding-right:1em">
                <input type="button" value="Excluir" name="btnExcluir" id="btnExcluir" onclick="javascript:ExcluirRegistro();" />
            </span><span>
                <input type="button" name="btnVoltar" value="Voltar" id="btnVoltar" onclick="javascript:window.location='@Url.Content("~/Midia/Index")'"/>
            </span><span>
                <input type="submit" value="Salvar" id="btnSalvar" />
            </span>
        </div>
    </fieldset>
}
<script language="javascript" type="text/javascript">
    function ExcluirRegistro() {
        if (confirm("Deseja excluir este registro?") == true) {
            window.location = '@Url.Content("~/Midia/Excluir?Id=")' + document.getElementById('hdId').value
        }
    }
</script>
